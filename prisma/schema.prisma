generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(cuid())
  firstname String
  lastname  String
  address   String
  phone     String
  email     String   @unique
  age       Int
  password  String
  isActive  Boolean  @default(false)
  Review    Review[]
  role      Role[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id      String  @id @default(cuid())
  name    String  @unique
  user    Users?  @relation(fields: [usersId], references: [id])
  usersId String?
}

model Restaurants {
  id           String   @id @default(cuid())
  nit          String
  businessName String
  title        String
  phone        String
  address      String[]
  about        String
  location     String[]
  gallery      String[]
  reviews      Review[]
}

model Products {
  id            String          @id @default(cuid())
  productName   String
  price         Int
  category      String
  subcategory   String
  description   String
  image         String
  orderProducts OrderProducts[]
}

model Booking {
  id      String   @id @default(cuid())
  type    Type
  date    DateTime
  time    DateTime
  address String
  detail  String
  Order   Order[]
}

model OrderProducts {
  id        String    @id @default(cuid())
  order     Order     @relation(fields: [orderId], references: [id])
  orderId   String
  product   Products? @relation(fields: [productId], references: [id])
  productId String
}

model Order {
  id            String          @id @default(cuid())
  date          DateTime
  time          DateTime
  totalPrice    Int
  booking       Booking         @relation(fields: [typeId], references: [id])
  typeId        String
  OrderProducts OrderProducts[]
}

enum Type {
  BOOKING
  DELIVERY
}

model Review {
  id            String       @id @default(cuid())
  title         String
  rating        Int
  comment       String
  user          Users        @relation(fields: [userId], references: [id])
  userId        String
  Restaurants   Restaurants? @relation(fields: [restaurantsId], references: [id])
  restaurantsId String?
}
